<%= form_for [@chat, @chat.messages.build], remote: true, data: {type: :json} do |f| %>
  
    <div class="field">
      <%= f.label :content, "Reply to thread" %><br />
      <%= f.text_area :content %>
    </div>
    
    <div class="actions">
      <%= f.submit "Create", class: "button" %>
    </div>
    
<% end %>